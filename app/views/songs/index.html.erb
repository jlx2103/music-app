<p id="notice"><%= notice %></p>

<h1>My Songs</h1>
<p>
<%= link_to new_song_path do %>
  <span class="glyphicon glyphicon-plus"></span> Add
<% end %>
</p>
</br>



<div class="row">
  <% @songs.each do |song| %>
    <div class="col-md-6">
      <div class="well">
        <h2><%= link_to song.name, song %></h2>    
        by <h3><%= song.artist.name %></h3>
        
        <p><% song.rating.times do %>
           <i class="fa fa-star star"></i>
          <% end %>
        </p>
        

        <p>
          <%= link_to edit_song_path(song) do %> 
            <i class="fa fa-pencil-square-o"></i> Edit
          <% end %>
          |
          <%= link_to song, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fa fa-times"></i> Destroy
          <%end%>
        </p>
        
      </div>
    </div>
    <% end %>
</div>
    
    


